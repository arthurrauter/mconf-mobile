<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<EditText android:layout_alignParentTop="true" android:id="@+id/server_password"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
		android:layout_marginBottom="5dp"></EditText>
	<LinearLayout android:id="@+id/buttonLayout" android:layout_below="@+id/server_password"
		android:background="@color/title_background_onfocus" android:layout_width="fill_parent"
		android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
		android:padding="5dp">
		<Button android:id="@+id/ok_password" 
			android:text="@string/ok" android:layout_height="wrap_content"
			android:layout_width="fill_parent"></Button>
	</LinearLayout>
</RelativeLayout>


